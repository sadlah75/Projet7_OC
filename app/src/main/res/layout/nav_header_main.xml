<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/plat"
        android:scaleX="4"
        android:scaleY="4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/activity_main_header_user_image"/>

    <ImageView
        android:id="@+id/activity_main_header_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/activity_main_header_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sadek LAHMADI"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toEndOf="@id/activity_main_header_user_image"
        app:layout_constraintTop_toTopOf="@id/activity_main_header_user_image"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_header_user_image"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/activity_main_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/activity_main_header_user_image"
        app:layout_constraintStart_toStartOf="@id/activity_main_header_username"
        app:layout_constraintBottom_toBottomOf="@id/activity_main_header_user_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>